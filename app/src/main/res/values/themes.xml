<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Dialog" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccentLight</item>
        <item name="colorOnSecondary">@color/colorPrimaryDark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
    </style>
    
    <style name="Theme.Dialog.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/circular_std_book</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    
    <style name="Theme.Dialog.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.Dialog.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <style name="Theme.Dialog.FontMedium">
        <item name="android:fontFamily">@font/circular_std_medium</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
    
    <style name="Theme.Dialog.FontBold">
        <item name="android:fontFamily">@font/circular_std_bold</item>
    </style>
    <style name="Theme.Dialog.TitleText" parent="">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
</resources>
