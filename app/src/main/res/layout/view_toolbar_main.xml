<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/edit_height"
        android:layout_height="@dimen/edit_height"
        android:id="@+id/avatar"
        android:src="@drawable/user"
        android:padding="4dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Theme.Dialog.FontBold"
        android:id="@+id/title"
        android:textColor="@color/colorAccent"
        tools:text="@string/app_name"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/edit_height"
        android:contentDescription="@string/more"
        android:id="@+id/updates_action"
        android:src="@drawable/notification_96px"
        android:adjustViewBounds="true"
        android:padding="8dp"
        app:layout_constraintEnd_toStartOf="@id/more_action"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/edit_height"
        android:contentDescription="@string/more"
        android:id="@+id/more_action"
        android:src="@drawable/menu_vertical_96px"
        android:adjustViewBounds="true"
        android:padding="8dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
